@{
    ViewData["Title"] = "Privacy Policy";
}
@*Start Body*@
<section class="fade-in">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="bg-light p-5 rounded shadow-lg">
                    <h1 class="display-4 text-center text-dark">Privacy Policy</h1>
                    <p class="lead text-center text-muted">We value your privacy at Korsi and are committed to protecting your personal information.</p>
                    <h4 class="text-dark">What We Collect:</h4>
                    <ul class="text-dark">
                        <li>Personal information like your name, email, and address when placing an order.</li>
                        <li>Payment information for processing purchases securely.</li>
                    </ul>
                    <h4 class="text-dark">How We Use Your Information:</h4>
                    <p class="text-dark">We use your information to process your orders, provide customer service, and keep you updated on our latest products. We do not share your personal details with third parties without your consent.</p>
                </div>
            </div>
        </div>
    </div>
</section>
@*End Body*@
