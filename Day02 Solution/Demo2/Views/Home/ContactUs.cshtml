@{
    ViewData["Title"] = "Contact Us";
}
@*Start Body*@
<section class="fade-in">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="bg-light p-5 rounded shadow-lg">
                    <h1 class="display-4 text-center text-dark">Contact Us</h1>
                    <p class="lead text-center text-muted">Have any questions or feedback? Reach out to us through the following methods:</p>
                    <h4 class="text-dark">Visit Us:</h4>
                    <p class="text-dark">You can visit our showroom at the following address:</p>
                    <address class="text-dark">
                        <strong>Korsi Chair Store</strong><br>
                        15 El-Malek El-Saleh Street, <br>
                        Downtown, Cairo, Egypt
                    </address>

                    <h4 class="text-dark">Email Us:</h4>
                    <p><a href="mailto:support@korsi.com" class="text-dark">support@korsi.com</a></p>

                    <h4 class="text-dark">Call Us:</h4>
                    <p>Phone: <strong>+20 2 123 456 789</strong> (Available Monday to Saturday, 10:00 AM - 6:00 PM)</p>

                    <h4 class="text-dark">Our Business Hours:</h4>
                    <ul class="text-dark">
                        <li>Sunday: Closed</li>
                        <li>Monday - Friday: 10:00 AM - 6:00 PM</li>
                        <li>Saturday: 10:00 AM - 3:00 PM</li>
                    </ul>

                    <h4 class="text-dark">Follow Us on Social Media:</h4>
                    <div class="social-icons text-center">
                        <a href="https://www.facebook.com/KorsiStore" target="_blank" class="social-icon" title="Facebook">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="https://www.instagram.com/KorsiStore" target="_blank" class="social-icon" title="Instagram">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <a href="https://twitter.com/KorsiStore" target="_blank" class="social-icon" title="Twitter">
                            <i class="fab fa-twitter"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@*End Body*@

@*icons and hover effect*@
<style>
    .social-icons a {
        font-size: 30px;
        margin: 10px;
        color: #5b4d38; 
        transition: all 0.3s ease;
    }

        .social-icons a:hover {
            color: #d7c8a7; 
            transform: scale(1.1);
        }

    .social-icon {
        text-decoration: none;
    }
</style>
